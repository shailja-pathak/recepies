<% include ./partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= recipe.name%></div>
    <form class="ui form" action = '/<%= recipe._id%>?_method=PUT' method = 'POST'>
        <div class="'field">
            <label>Title</label>
            <input required type="text" name="recipe[name]" value="<%= recipe.name%>">
        </div>

        <div class="'field">
            <label>Image</label>
            <input  type="text" name="recipe[image]" value="<%= recipe.image%>">
        </div>

        <div class="'field">
            <label>Recipe</label>
            <textarea cols="30" rows="10" required name="recipe[description]"><%= recipe.description%></textarea>
        </div>
        <input class="ui violet inverted button  " type="submit">

    </form>
</div>

<% include ./partials/footer%>